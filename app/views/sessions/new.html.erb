<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="mx-auto w-16 h-16 bg-gradient-to-br from-primary-600 to-primary-500 rounded-2xl flex items-center justify-center mb-6 p-3.5">
        <svg class="w-full h-full text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
        </svg>
      </div>
      <h1 class="text-3xl font-display font-bold text-neutral-900">Sign in to Foresight</h1>
      <p class="text-neutral-500 mt-2">Enter your credentials to continue</p>
    </div>

    <div class="card p-8">
      <% if flash[:info] %>
        <div class="alert-info mb-6">
          <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1"><%= flash[:info] %></div>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert-success mb-6">
          <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1"><%= flash[:notice] %></div>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert-danger mb-6">
          <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1"><%= flash[:alert] %></div>
        </div>
      <% end %>

      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" value="<%= params[:username] %>" class="form-input" required autofocus>
        </div>

        <div>
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-input" required>
        </div>

        <div class="pt-4">
          <button type="submit" class="btn-primary w-full justify-center">
            Sign In
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
