<div class="space-y-6">
  <%# Page Header %>
  <div class="flex flex-col xl:flex-row xl:justify-between xl:items-center gap-4">
    <div>
      <h1 class="text-2xl font-display font-bold text-neutral-900">Transactions</h1>
      <p class="text-sm text-neutral-500 mt-1">View and manage your transaction history</p>
    </div>
    <%= link_to new_transaction_path, class: "btn-primary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      New Transaction
    <% end %>
  </div>

  <%# Filters %>
  <div class="card p-4">
    <%= form_with url: transactions_path, method: :get, class: "flex items-center gap-4" do %>
      <div class="flex-1 max-w-xs">
        <label class="form-label">Filter by Account</label>
        <select name="account_id" class="form-select" data-controller="auto-submit" data-action="change->auto-submit#submit">
          <option value="">All Accounts</option>
          <% @accounts.each do |account| %>
            <option value="<%= account.id %>" <%= 'selected' if @selected_account_id == account.id.to_s %>><%= account.name %></option>
          <% end %>
        </select>
      </div>
      <div class="pt-6">
        <%= badge "#{@settings.default_view_months} months", variant: :neutral %>
        <span class="text-sm text-neutral-500 ml-1">default view</span>
      </div>
    <% end %>
  </div>

  <%# Transactions Table %>
  <div class="card overflow-hidden">
    <%# Mobile Transaction Cards %>
    <div class="xl:hidden divide-y divide-neutral-200">
      <% running_balances_mobile = {} %>
      <% @accounts.each { |a| running_balances_mobile[a.id] = a.current_balance } %>
      <% @transactions.each do |txn| %>
        <% running_balances_mobile[txn.account_id] += txn.amount %>
        <% balance = running_balances_mobile[txn.account_id] %>
        <div class="p-4 md:p-3 lg:p-2 flex flex-col gap-2 <%= txn.estimated? ? 'bg-warning-50/30' : '' %>">
          <%# Row 1: Description + Account/Frequency info (responsive) %>
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
            <%# Left: Status + Description + Category + Account + Frequency (inline at md+) %>
            <div class="flex items-center gap-2 flex-wrap">
              <%= status_label estimated: txn.estimated?, abbreviated: true %>
              <span class="font-semibold text-neutral-900"><%= txn.description %></span>
              <%= category_badge(txn.category) %>
              <%= transfer_badge(txn, show_account: true) %>

              <%# Account + Frequency (visible on md+) %>
              <span class="hidden md:inline-flex items-center gap-1 text-xs text-neutral-500">
                <span class="text-neutral-600"><%= txn.account.name %></span>
                • <%= txn.recurring_rule ? txn.recurring_rule.frequency.titleize : 'One-time' %>
                <% if txn.user_modified %>
                  <span class="inline-flex items-center cursor-help ml-0.5" title="Manually adjusted - protected from rule changes">
                    <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                      <circle cx="4" cy="4" r="3"/>
                    </svg>
                  </span>
                <% end %>
              </span>
            </div>

            <%# Right: Date + Amount %>
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-neutral-600"><%= txn.date.strftime("%b %d") %></span>
              <span class="text-money font-semibold <%= txn.amount >= 0 ? 'text-success-600' : 'text-danger-600' %>">
                <%= format_money(txn.amount, color: false) %>
              </span>
            </div>
          </div>

          <%# Account + Frequency (visible on mobile only) %>
          <div class="md:hidden text-xs text-neutral-500 flex items-center gap-2">
            <span><%= txn.account.name %></span>
            <span class="text-neutral-300">•</span>
            <span class="flex items-center gap-1">
              <%= txn.recurring_rule ? txn.recurring_rule.frequency.titleize : 'One-time' %>
              <% if txn.user_modified %>
                <span class="inline-flex items-center cursor-help" title="Manually adjusted - protected from rule changes">
                  <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3"/>
                  </svg>
                </span>
              <% end %>
            </span>
          </div>

          <%# Row 2: Balance and Actions %>
          <div class="flex items-center justify-between">
            <div class="text-sm">
              <span class="text-neutral-500">Bal:</span>
              <span class="text-money font-medium <%= balance >= 0 ? 'text-neutral-900' : 'text-danger-600' %>">
                $<%= money_amount(balance) %>
              </span>
            </div>
            <div class="flex items-center gap-1">
              <% if txn.estimated? %>
                <%= icon_button icon: :check, path: confirm_actual_transaction_path(txn), title: "Confirm", variant: :success, data: { turbo_frame: "_top" } %>
              <% end %>
              <%= icon_button icon: :edit, path: edit_transaction_path(txn), title: "Edit", variant: :primary %>
              <%= icon_button icon: :delete, path: transaction_path(txn), title: "Delete", variant: :danger, method: :delete, data: { turbo_confirm: "Delete?" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Desktop Table %>
    <div class="hidden xl:block table-container border-0">
      <table class="data-table">
        <thead>
          <tr>
            <th>Status</th>
            <th>Date</th>
            <th>Description</th>
            <th>Account</th>
            <th class="text-right">Amount</th>
            <th class="text-right">Balance</th>
            <th class="text-right w-32">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% running_balances = {} %>
          <% @accounts.each { |a| running_balances[a.id] = a.current_balance } %>
          <% @transactions.each do |txn| %>
            <% running_balances[txn.account_id] += txn.amount %>
            <tr class="<%= txn.estimated? ? 'bg-warning-50/30' : '' %>">
              <%# Status %>
              <td>
                <%= status_label estimated: txn.estimated? %>
              </td>

              <%# Date %>
              <td class="text-neutral-900">
                <%= txn.date.strftime("%b %d, %Y") %>
              </td>

              <%# Description %>
              <td>
                <div class="flex items-center gap-2 flex-wrap">
                  <span class="font-medium text-neutral-900"><%= txn.description %></span>
                  <%= category_badge(txn.category) %>
                  <%= transfer_badge(txn, show_account: true) %>
                </div>
                <% if txn.recurring_rule %>
                  <div class="text-xs text-neutral-400 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    <%= txn.recurring_rule.frequency.titleize %>
                    <% if txn.user_modified %>
                      <span class="inline-flex items-center cursor-help" title="Manually adjusted - protected from rule changes">
                        <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                          <circle cx="4" cy="4" r="3"/>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-xs text-neutral-400 flex items-center gap-1">
                    One-time
                    <% if txn.user_modified %>
                      <span class="inline-flex items-center cursor-help" title="Manually adjusted - protected from rule changes">
                        <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                          <circle cx="4" cy="4" r="3"/>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </td>

              <%# Account %>
              <td class="text-neutral-600">
                <%= txn.account.name %>
              </td>

              <%# Amount %>
              <td class="text-right">
                <%= format_money(txn.amount) %>
              </td>

              <%# Running Balance %>
              <td class="text-right">
                <% balance = running_balances[txn.account_id] %>
                <span class="font-mono tabular-nums <%= balance >= 0 ? 'text-neutral-900' : 'text-danger-600 font-semibold' %>">
                  $<%= money_amount(balance) %>
                </span>
              </td>

              <%# Actions %>
              <td class="text-right">
                <div class="flex items-center justify-end gap-1">
                  <% if txn.estimated? %>
                    <%= icon_button icon: :check, path: confirm_actual_transaction_path(txn), title: "Mark as actual", variant: :success, data: { turbo_frame: "_top" } %>
                  <% end %>
                  <%= icon_button icon: :edit, path: edit_transaction_path(txn), title: "Edit transaction", variant: :primary %>
                  <%= icon_button icon: :delete, path: transaction_path(txn), title: "Delete transaction", variant: :danger, method: :delete, data: { turbo_confirm: "Delete this transaction?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @transactions.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-neutral-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-neutral-900 mb-1">No transactions found</h3>
        <p class="text-sm text-neutral-500 mb-4">
          <% if @selected_account_id.present? %>
            No transactions for this account in the selected period.
          <% else %>
            Get started by creating a transaction or setting up recurring rules.
          <% end %>
        </p>
        <%= link_to new_transaction_path, class: "btn-primary btn-sm" do %>
          Add Transaction
        <% end %>
      </div>
    <% end %>
  </div>
</div>
