<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <%= link_to transactions_path, class: "inline-flex items-center gap-1.5 text-sm text-neutral-500 hover:text-neutral-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to Transactions
    <% end %>
    <h1 class="text-2xl font-display font-bold text-neutral-900 mt-2">Edit Transaction</h1>
    <p class="text-neutral-500 mt-1">Update the details for this transaction</p>
  </div>

  <div class="card p-8">
    <%= render "form", transaction: @transaction %>
  </div>
</div>
