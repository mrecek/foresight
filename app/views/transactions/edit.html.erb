<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <%= link_to @return_url, class: "inline-flex items-center gap-1.5 text-sm text-neutral-500 hover:text-neutral-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back
    <% end %>
    <h1 class="text-2xl font-display font-bold text-neutral-900 mt-2">Edit Transaction</h1>
    <p class="text-neutral-500 mt-1">Update the details for this transaction</p>
  </div>

  <div class="card p-8">
    <% if @transaction.user_modified && @transaction.recurring_rule %>
      <div class="mb-6 p-3 bg-primary-50 border border-primary-100 rounded-lg flex items-start gap-3">
        <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-sm text-primary-700">This transaction was manually adjusted and won't be regenerated when the recurring rule changes.</p>
      </div>
    <% end %>
    <%= render "form", transaction: @transaction %>
  </div>
</div>
