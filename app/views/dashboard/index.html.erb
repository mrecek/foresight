<div class="space-y-8">
  <!-- Account Tabs -->
  <div class="flex flex-wrap gap-4">
    <% @accounts.each do |account| %>
      <% is_selected = @selected_account&.id == account.id %>
      <% status = account.projection_status %>
      <%
        # Enhanced calculation for lowest balance tracking
        lowest_balance = account.lowest_projected_balance
        lowest_date = nil           # When it FIRST crosses threshold
        most_negative_date = nil    # When it reaches the LOWEST point
        
        if status != :normal
          running_balance = account.current_balance
          most_negative_balance = running_balance
          
          account.transactions.where("date >= ?", account.balance_date).order(:date).each do |txn|
            running_balance += txn.amount
            
            # Track first time below threshold
            if lowest_date.nil? && ((status == :danger && running_balance < 0) || (status == :warning && running_balance < account.warning_threshold))
              lowest_date = txn.date
            end
            
            # Track the most negative point
            if status == :danger && running_balance <= most_negative_balance
              most_negative_balance = running_balance
              most_negative_date = txn.date
            end
          end
        end
      %>
      <%= link_to root_path(account_id: account.id, months: @months_ahead),
          class: "relative block p-5 rounded-xl border-2 transition-all min-w-[180px] xl:min-w-[220px] group #{is_selected ? 'border-primary-500 bg-white shadow-soft-lg' : 'card-hover border-transparent'}" do %>
        <!-- Status indicator dot with tooltip -->
        <% if status != :normal %>
          <div class="absolute top-3 right-3 group/tooltip">
            <span class="<%= status == :danger ? 'status-dot-danger' : 'status-dot-warning' %> ring-2 ring-white cursor-help"></span>
            <!-- Tooltip -->
            <div class="absolute left-1/2 translate-x-[-20%] top-full mt-2 w-64 max-w-[calc(100vw-2rem)] bg-neutral-900 text-white text-xs rounded-lg p-3 opacity-0 pointer-events-none group-hover/tooltip:opacity-100 group-hover/tooltip:pointer-events-auto transition-opacity duration-200 z-30 shadow-lg">
              <div class="font-semibold mb-2 flex items-center gap-2">
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <%= status == :danger ? 'Negative Balance Warning' : 'Low Balance Warning' %>
              </div>
              
              <div class="text-neutral-200 leading-relaxed">
                <% if status == :danger %>
                  <% if most_negative_date && lowest_date != most_negative_date && (most_negative_date - lowest_date).to_i > 3 %>
                    <%# Case 1: Different dates, significant gap %>
                    <div>Goes negative: <%= lowest_date.strftime('%b %d') %></div>
                    <div class="flex items-start gap-1 mt-1">
                      <span class="text-danger-400 text-base leading-none">↓</span>
                      <span>Lowest point: $<%= money_amount(lowest_balance) %> (<%= most_negative_date.strftime('%b %d') %>)</span>
                    </div>
                  <% elsif most_negative_date && lowest_date != most_negative_date %>
                    <%# Case 2: Different dates but close together (≤3 days) %>
                    <div>Goes negative on <%= lowest_date.strftime('%b %d') %></div>
                    <div class="text-neutral-300 text-[11px] mt-1">Reaches $<%= money_amount(lowest_balance) %> shortly after</div>
                  <% else %>
                    <%# Case 3: Same date or most_negative_date not available %>
                    <div>Goes negative: <%= lowest_date.strftime('%b %d') %></div>
                    <div class="text-neutral-300 mt-1">Balance reaches: $<%= money_amount(lowest_balance) %></div>
                  <% end %>
                <% else %>
                  <%# Warning state (below threshold but not negative) %>
                  This account will fall below your warning threshold ($<%= money_amount(account.warning_threshold) %>)<%= lowest_date ? " on #{lowest_date.strftime('%b %d')}" : '' %>.
                <% end %>
              </div>
              
              <!-- Arrow -->
              <div class="absolute left-[18%] bottom-full w-0 h-0 border-l-4 border-r-4 border-b-4 border-transparent border-b-neutral-900"></div>
            </div>
          </div>
        <% end %>

        <div class="text-xs font-semibold text-neutral-500 uppercase tracking-wider"><%= account.account_type %></div>
        <div class="text-base font-display font-bold text-neutral-900 mt-1"><%= account.name %></div>
        
        <div class="mt-3 flex items-center gap-2.5 text-sm">
          <span class="text-money text-neutral-600">$<%= money_amount(account.current_balance) %></span>
          <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
          <% projected = account.projected_balance %>
          <span class="text-money font-semibold <%= projected >= 0 ? 'text-success-600' : 'text-danger-600' %>">
            $<%= money_amount(projected) %>
          </span>
        </div>
        
        <!-- Show warning banner for negative balance (moved below balance) -->
        <% if status == :danger %>
          <div class="mt-2 px-2 py-1 bg-danger-50 border border-danger-200 rounded-md">
            <div class="text-xs font-medium text-danger-700 flex items-center gap-1">
              <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              Will go negative
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <!-- Add Account -->
    <%= link_to new_account_path, class: "flex items-center justify-center p-5 rounded-xl border-2 border-dashed border-neutral-300 hover:border-primary-400 hover:bg-primary-50/50 min-w-[160px] transition-all group" do %>
      <div class="text-center">
        <div class="mx-auto w-10 h-10 rounded-full bg-neutral-100 group-hover:bg-primary-100 flex items-center justify-center transition-colors">
          <svg class="h-5 w-5 text-neutral-500 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-neutral-600 group-hover:text-primary-700 mt-2 block transition-colors">Add Account</span>
      </div>
    <% end %>
  </div>

  <% if @selected_account %>
    <!-- Transactions List -->
    <%= turbo_frame_tag "transactions", data: { turbo_action: "advance" } do %>
    <div class="card">
      <!-- Fixed Header with Reconcile Row -->
      <div class="border-b border-neutral-200 bg-white rounded-t-xl">
        <!-- Title Row -->
        <div class="px-6 py-5 flex justify-between items-center">
          <div>
            <h2 class="text-xl font-display font-bold text-neutral-900"><%= @selected_account.name %></h2>
          </div>
          <div class="flex items-center gap-2">
            <%= design_button "New Transaction", new_transaction_path(account_id: @selected_account.id), variant: :primary, size: :sm, data: { turbo_frame: "_top" } %>
            <%= design_button "Edit Account", edit_account_path(@selected_account), variant: :ghost, size: :sm, data: { turbo_frame: "_top" } %>
          </div>
        </div>

        <!-- Reconcile Row -->
        <% # old_txn_count variable removed - now calculated dynamically by JS %>
        <div class="px-6 py-3 bg-neutral-50 border-t border-neutral-200" data-controller="reconcile-confirm">
          
          <!-- Normal Form State -->
          <div data-reconcile-confirm-target="form" class="flex items-center justify-between flex-wrap gap-3">
            <%= form_with url: reconcile_account_path(@selected_account), method: :patch,
                id: "reconcile-form",
                class: "flex items-center gap-4 flex-wrap" do |f| %>

              <div class="flex items-center gap-2">
                <span class="text-sm text-neutral-600">Balance:</span>
                <div class="flex items-center">
                  <span class="text-money font-semibold text-neutral-500 mr-1">$</span>
                  <%= f.number_field :current_balance,
                      value: sprintf('%.2f', @selected_account.current_balance),
                      step: 0.01,
                      class: "form-input py-1.5 w-32 text-money text-right" %>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <span class="text-sm text-neutral-600">as of</span>
                <span class="text-sm font-semibold text-neutral-800"><%= @selected_account.balance_date.strftime("%b %d, %Y") %></span>
                <%= f.date_field :balance_date,
                    id: "reconcile_balance_date",
                    class: "form-input py-1 w-36 text-sm",
                    max: Date.current.to_s %>
                <script>
                  // Default reconcile date to today (in browser's local timezone)
                  (function() {
                    var field = document.getElementById('reconcile_balance_date');
                    if (field && !field.value) {
                      var today = new Date();
                      var yyyy = today.getFullYear();
                      var mm = String(today.getMonth() + 1).padStart(2, '0');
                      var dd = String(today.getDate()).padStart(2, '0');
                      field.value = yyyy + '-' + mm + '-' + dd;
                    }
                  })();
                </script>
              </div>

              <button type="button" 
                  data-action="click->reconcile-confirm#showConfirmation"
                  class="btn-sm bg-success-600 hover:bg-success-700 text-white rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                Reconcile ✓
              </button>
            <% end %>
          </div>

          <!-- Confirmation State -->
          <div data-reconcile-confirm-target="confirmation" class="hidden">
            <div class="flex flex-col gap-3">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span class="text-sm text-neutral-700">
                  Set balance to <strong data-reconcile-confirm-target="balance">$0.00</strong> as of <strong data-reconcile-confirm-target="date">today</strong>
                  <span data-reconcile-confirm-target="removeText"></span>
                </span>
              </div>
              
              <!-- Same-day transactions checkbox (shown only if there are any) -->
              <div data-reconcile-confirm-target="todayOption" class="hidden ml-7">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="checkbox" 
                      id="include_today_transactions"
                      data-reconcile-confirm-target="includeToday"
                      data-action="change->reconcile-confirm#updateTodayCount"
                      class="w-4 h-4 rounded border-neutral-300 text-warning-600 focus:ring-warning-500">
                  <span class="text-sm text-neutral-600">
                    Also clear <strong data-reconcile-confirm-target="todayCount">0</strong> transaction<span data-reconcile-confirm-target="todayPlural">s</span> from today
                  </span>
                </label>
              </div>
              
              <div class="flex items-center justify-end gap-2">
                <button type="button" 
                    data-action="click->reconcile-confirm#cancel"
                    class="btn-sm bg-neutral-200 hover:bg-neutral-300 text-neutral-700 rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                  Cancel
                </button>
                <button type="button" 
                    data-action="click->reconcile-confirm#confirm"
                    class="btn-sm bg-warning-500 hover:bg-warning-600 text-white rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                  Confirm Reconcile
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Table Area -->
      <div>
        <!-- Mobile Transaction Cards -->
        <div class="xl:hidden divide-y divide-neutral-200">
          <% prev_date_mobile = nil %>
          <% today_marker_shown_mobile = false %>
          <% @grouped_transactions.each do |item| %>
            <% if item.group? %>
              <%# Render group - get first transaction date for today marker %>
              <% first_txn_date = item.first_date %>
              
              <%# Today marker before group if crossing from past to future %>
              <% if !today_marker_shown_mobile && prev_date_mobile && prev_date_mobile < Date.current && first_txn_date >= Date.current %>
                <% today_marker_shown_mobile = true %>
                <div class="py-2 bg-primary-50/50 text-center">
                  <span class="inline-flex items-center gap-2 text-sm font-medium text-primary-600">
                    <span class="w-8 h-px bg-primary-300"></span>
                    Today
                    <span class="w-8 h-px bg-primary-300"></span>
                  </span>
                </div>
              <% end %>
              
              <%= render partial: "dashboard/transaction_group_mobile", locals: { group: item } %>
              <% prev_date_mobile = item.last_date %>
            <% else %>
              <%# Render individual transaction %>
              <% txn = item.transaction %>
              <% balance = item.running_balance %>
              <% is_past = txn.date < Date.current %>
              <% needs_attention = txn.estimated? && txn.date <= @attention_threshold %>
              <% balance_status = balance < 0 ? :danger : (balance < @selected_account.warning_threshold ? :warning : :normal) %>

              <%# Today marker %>
              <% if !today_marker_shown_mobile && prev_date_mobile && prev_date_mobile < Date.current && txn.date >= Date.current %>
                <% today_marker_shown_mobile = true %>
                <div class="py-2 bg-primary-50/50 text-center">
                  <span class="inline-flex items-center gap-2 text-sm font-medium text-primary-600">
                    <span class="w-8 h-px bg-primary-300"></span>
                    Today
                    <span class="w-8 h-px bg-primary-300"></span>
                  </span>
                </div>
              <% end %>

              <%# Also show marker if first transaction is today or future but there are no past transactions %>
              <% if !today_marker_shown_mobile && !prev_date_mobile && txn.date >= Date.current && @selected_account.balance_date < Date.current %>
                <% today_marker_shown_mobile = true %>
                <div class="py-2 bg-primary-50/50 text-center">
                  <span class="inline-flex items-center gap-2 text-sm font-medium text-primary-600">
                    <span class="w-8 h-px bg-primary-300"></span>
                    Today
                    <span class="w-8 h-px bg-primary-300"></span>
                  </span>
                </div>
              <% end %>

              <div class="p-4 md:p-3 lg:p-2 flex flex-col gap-2 <%= txn.estimated? ? 'bg-warning-50/30' : '' %> <%= needs_attention ? 'border-l-4 border-l-warning-400' : '' %> <%= is_past ? 'opacity-60' : '' %>" data-transaction-date="<%= txn.date.to_s %>">
                <%# Row 1: Description + Frequency info (responsive) %>
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                  <%# Left: Status + Description + Category + Frequency (inline at md+) %>
                  <div class="flex items-center gap-2 flex-wrap">
                    <%= status_label estimated: txn.estimated?, abbreviated: true %>
                    <span class="font-semibold text-neutral-900 md:line-clamp-3 xl:line-clamp-2"><%= txn.description %></span>
                    <%= category_badge(txn.category) %>
                    <%= transfer_badge(txn, show_account: true) %>

                    <%# Frequency (visible on md+) %>
                    <% if txn.recurring_rule %>
                      <span class="hidden md:inline-flex items-center gap-1 text-xs text-neutral-500">
                        <%= txn.recurring_rule.frequency.titleize %>
                        <% if txn.user_modified %>
                          <span class="inline-flex items-center cursor-help ml-0.5" title="Manually adjusted - protected from rule changes">
                            <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                              <circle cx="4" cy="4" r="3"/>
                            </svg>
                          </span>
                        <% end %>
                      </span>
                    <% end %>
                  </div>

                  <%# Right: Date + Amount %>
                  <div class="flex items-center gap-3">
                    <span class="text-sm font-medium text-neutral-600"><%= txn.date.strftime("%b %d") %></span>
                    <span class="text-money font-semibold <%= txn.amount >= 0 ? 'text-success-600' : 'text-danger-600' %>">
                      <%= txn.formatted_amount %>
                    </span>
                  </div>
                </div>

                <%# Frequency (visible on mobile only) %>
                <% if txn.recurring_rule %>
                  <div class="md:hidden text-xs text-neutral-500 flex items-center gap-1">
                    <%= txn.recurring_rule.frequency.titleize %>
                    <% if txn.user_modified %>
                      <span class="inline-flex items-center cursor-help" title="Manually adjusted - protected from rule changes">
                        <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                          <circle cx="4" cy="4" r="3"/>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                <% end %>

                <%# Row 2: Balance and Actions %>
                <div class="flex items-center justify-between">
                  <div class="text-sm">
                    <span class="text-neutral-500">Bal:</span>
                    <span class="text-money font-medium <%= balance_status == :danger ? 'text-danger-600' : (balance_status == :warning ? 'text-warning-700' : 'text-neutral-900') %>">
                      $<%= money_amount(balance) %>
                    </span>
                  </div>
                  <div class="flex items-center gap-1">
                    <% if txn.estimated? %>
                      <%= icon_button icon: :check, path: confirm_actual_transaction_path(txn, return_url: request.fullpath), title: "Confirm", variant: :success, data: { turbo_frame: "_top" } %>
                    <% end %>
                    <%= icon_button icon: :edit, path: edit_transaction_path(txn, return_url: request.fullpath), title: "Edit", variant: :primary, data: { turbo_frame: "_top" } %>
                    <%= icon_button icon: :delete, path: transaction_path(txn), title: "Delete", variant: :danger, method: :delete, data: { turbo_confirm: "Delete?" } %>
                  </div>
                </div>
              </div>
              <% prev_date_mobile = txn.date %>
            <% end %>
          <% end %>
        </div>

        <table class="hidden xl:table data-table w-full">
          <thead class="sticky top-16 z-20 bg-white shadow-sm">
            <tr>
              <th class="w-20 bg-white">Status</th>
              <th class="bg-white">Date</th>
              <th class="bg-white">Description</th>
              <th class="text-right bg-white">Amount</th>
              <th class="text-right bg-white">Balance</th>
              <th class="text-right w-32 bg-white">Actions</th>
            </tr>
          </thead>
          <tbody class="relative z-0">
            <% prev_date = nil %>
            <% today_marker_shown = false %>
            <% @grouped_transactions.each do |item| %>
              <% if item.group? %>
                <%# Render group - get first transaction date for today marker %>
                <% first_txn_date = item.first_date %>
                
                <%# Insert "Today" marker when crossing from past to future %>
                <% if !today_marker_shown && prev_date && prev_date < Date.current && first_txn_date >= Date.current %>
                  <% today_marker_shown = true %>
                  <tr class="bg-primary-50/50">
                    <td colspan="6" class="text-center text-sm font-medium text-primary-600 py-2">
                      <span class="inline-flex items-center gap-2">
                        <span class="w-8 h-px bg-primary-300"></span>
                        Today
                        <span class="w-8 h-px bg-primary-300"></span>
                      </span>
                    </td>
                  </tr>
                <% end %>
                
                <%= render partial: "dashboard/transaction_group", locals: { group: item } %>
                <% prev_date = item.last_date %>
              <% else %>
                <%# Render individual transaction %>
                <% txn = item.transaction %>
                <% balance = item.running_balance %>
                <% is_past = txn.date < Date.current %>
                <% needs_attention = txn.estimated? && txn.date <= @attention_threshold %>
                <%
                  balance_status = if balance < 0
                    :danger
                  elsif balance < @selected_account.warning_threshold
                    :warning
                  else
                    :normal
                  end
                %>

                <%# Insert "Today" marker when crossing from past to future %>
                <% if !today_marker_shown && prev_date && prev_date < Date.current && txn.date >= Date.current %>
                  <% today_marker_shown = true %>
                  <tr class="bg-primary-50/50">
                    <td colspan="6" class="text-center text-sm font-medium text-primary-600 py-2">
                      <span class="inline-flex items-center gap-2">
                        <span class="w-8 h-px bg-primary-300"></span>
                        Today
                        <span class="w-8 h-px bg-primary-300"></span>
                      </span>
                    </td>
                  </tr>
                <% end %>

                <%# Also show marker if first transaction is today or future but there are no past transactions %>
                <% if !today_marker_shown && !prev_date && txn.date >= Date.current && @selected_account.balance_date < Date.current %>
                  <% today_marker_shown = true %>
                  <tr class="bg-primary-50/50">
                    <td colspan="6" class="text-center text-sm font-medium text-primary-600 py-2">
                      <span class="inline-flex items-center gap-2">
                        <span class="w-8 h-px bg-primary-300"></span>
                        Today
                        <span class="w-8 h-px bg-primary-300"></span>
                      </span>
                    </td>
                  </tr>
                <% end %>

                <tr class="<%= txn.estimated? ? 'bg-warning-50/30' : '' %> <%= needs_attention ? 'border-l-4 border-l-warning-400' : '' %> <%= is_past ? 'opacity-60' : '' %>" data-transaction-date="<%= txn.date.to_s %>">
                  <td class="cell-nowrap">
                    <%= status_label estimated: txn.estimated? %>
                  </td>
                  <td class="cell-nowrap font-medium">
                    <%= txn.date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="cell-description" title="<%= txn.description %>">
                    <span class="font-semibold text-neutral-900 line-clamp-2"><%= txn.description %></span>
                    <div class="flex items-center gap-2 mt-1 flex-wrap">
                      <%= category_badge(txn.category) %>
                      <%= transfer_badge(txn, show_account: true) %>
                      <% if txn.recurring_rule %>
                        <span class="text-xs text-neutral-500 flex items-center gap-1">
                          <%= txn.recurring_rule.frequency.titleize %>
                          <% if txn.user_modified %>
                            <span class="inline-flex items-center cursor-help" title="Manually adjusted - protected from rule changes">
                              <svg class="w-3 h-3 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                                <circle cx="4" cy="4" r="3"/>
                              </svg>
                            </span>
                          <% end %>
                        </span>
                      <% end %>
                    </div>
                  </td>
                  <td class="cell-nowrap text-right text-money <%= txn.amount >= 0 ? 'text-success-600' : 'text-danger-600' %>">
                    <%= txn.formatted_amount %>
                  </td>
                  <td class="cell-nowrap text-right text-money <%= balance_status == :danger ? 'text-danger-600 bg-danger-50' : (balance_status == :warning ? 'text-warning-700 bg-warning-50' : 'text-neutral-900') %>">
                    $<%= money_amount(balance) %>
                  </td>
                  <td class="cell-nowrap text-right">
                    <div class="flex items-center justify-end gap-1">
                      <% if txn.estimated? %>
                        <%= icon_button icon: :check, path: confirm_actual_transaction_path(txn, return_url: request.fullpath), title: "Mark as actual", variant: :success, data: { turbo_frame: "_top" } %>
                      <% end %>
                      <%= icon_button icon: :edit, path: edit_transaction_path(txn, return_url: request.fullpath), title: "Edit transaction", variant: :primary, data: { turbo_frame: "_top" } %>
                      <%= icon_button icon: :delete, path: transaction_path(txn), title: "Delete transaction", variant: :danger, method: :delete, data: { turbo_confirm: "Delete this transaction?" } %>
                    </div>
                  </td>
                </tr>
                <% prev_date = txn.date %>
              <% end %>
            <% end %>
          </tbody>
        </table>

        <% if @grouped_transactions.empty? %>
          <div class="px-6 py-16 text-center">
            <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p class="mt-4 text-neutral-500">No transactions for this account</p>
          </div>
        <% end %>
      </div>

      <%# Time period chips %>
      <div class="px-6 py-4 border-t border-neutral-200 bg-white rounded-b-xl">
        <div class="flex items-center justify-center gap-2">
          <%# Primary chip options %>
          <% [1, 3, 6].each do |months| %>
            <% active = @months_ahead == months %>
            <%= link_to root_path(account_id: @selected_account.id, months: months),
                class: "px-3 py-1.5 text-sm font-medium rounded-full transition-colors #{active ? 'bg-primary-600 text-white' : 'bg-neutral-100 text-neutral-600 hover:bg-neutral-200'}" do %>
              <%= months %> mo
            <% end %>
          <% end %>

          <%# "More" dropdown for extended ranges %>
          <div class="relative" data-controller="dropdown">
            <% more_active = @months_ahead > 6 %>
            <button type="button"
                    data-dropdown-target="button"
                    data-action="click->dropdown#toggle keydown->dropdown#keydown"
                    aria-expanded="false"
                    class="px-3 py-1.5 text-sm font-medium rounded-full transition-colors inline-flex items-center gap-1 <%= more_active ? 'bg-primary-600 text-white' : 'bg-neutral-100 text-neutral-600 hover:bg-neutral-200' %>">
              <% if more_active %>
                <%= @months_ahead >= 12 ? "#{@months_ahead / 12} yr" : "#{@months_ahead} mo" %>
              <% else %>
                More
              <% end %>
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div data-dropdown-target="menu"
                 class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-32 bg-white rounded-lg shadow-lg border border-neutral-200 py-1 opacity-0 scale-95 pointer-events-none transition-all duration-150 z-20">
              <%= link_to root_path(account_id: @selected_account.id, months: 9),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 9 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                9 months
              <% end %>
              <%= link_to root_path(account_id: @selected_account.id, months: 12),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 12 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                1 year
              <% end %>
              <%= link_to root_path(account_id: @selected_account.id, months: 24),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 24 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                2 years
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <div class="card p-16 text-center">
      <svg class="mx-auto h-16 w-16 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
      </svg>
      <p class="mt-4 text-lg text-neutral-600">No accounts yet</p>
      <p class="mt-2 text-sm text-neutral-500">Create your first account to start tracking your finances</p>
      <%= design_button "Create Account", new_account_path, variant: :primary, class: "mt-6" %>
    </div>
  <% end %>
</div>
