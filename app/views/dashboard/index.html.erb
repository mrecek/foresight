<div class="space-y-8">
  <!-- Account Tabs -->
  <div class="flex flex-wrap gap-4">
    <% @accounts.each do |account| %>
      <% is_selected = @selected_account&.id == account.id %>
      <% status = account.projection_status %>
      <%= link_to root_path(account_id: account.id, months: @months_ahead),
          class: "relative block p-5 rounded-xl border-2 transition-all min-w-[220px] group #{is_selected ? 'border-primary-500 bg-white shadow-soft-lg' : 'card-hover border-transparent'}" do %>
        <!-- Status indicator dot -->
        <% if status != :normal %>
          <span class="absolute top-3 right-3 <%= status == :danger ? 'status-dot-danger' : 'status-dot-warning' %> ring-2 ring-white"></span>
        <% end %>

        <div class="text-xs font-semibold text-neutral-500 uppercase tracking-wider"><%= account.account_type %></div>
        <div class="text-base font-display font-bold text-neutral-900 mt-1"><%= account.name %></div>
        <div class="mt-3 flex items-center gap-2.5 text-sm">
          <span class="text-money text-neutral-600">$<%= money_amount(account.current_balance) %></span>
          <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
          <% projected = account.projected_balance %>
          <span class="text-money font-semibold <%= projected >= 0 ? 'text-success-600' : 'text-danger-600' %>">
            $<%= money_amount(projected) %>
          </span>
        </div>
      <% end %>
    <% end %>

    <!-- Add Account -->
    <%= link_to new_account_path, class: "flex items-center justify-center p-5 rounded-xl border-2 border-dashed border-neutral-300 hover:border-primary-400 hover:bg-primary-50/50 min-w-[160px] transition-all group" do %>
      <div class="text-center">
        <div class="mx-auto w-10 h-10 rounded-full bg-neutral-100 group-hover:bg-primary-100 flex items-center justify-center transition-colors">
          <svg class="h-5 w-5 text-neutral-500 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-neutral-600 group-hover:text-primary-700 mt-2 block transition-colors">Add Account</span>
      </div>
    <% end %>
  </div>

  <% if @selected_account %>
    <!-- Transactions List -->
    <%= turbo_frame_tag "transactions", data: { turbo_action: "advance" } do %>
    <div class="card flex flex-col" style="height: calc(100vh - 250px); min-height: 400px;">
      <!-- Fixed Header with Reconcile Row -->
      <div class="flex-shrink-0 border-b border-neutral-200 bg-white rounded-t-xl">
        <!-- Title Row -->
        <div class="px-6 py-5 flex justify-between items-center">
          <div>
            <h2 class="text-xl font-display font-bold text-neutral-900"><%= @selected_account.name %></h2>
          </div>
          <div class="flex items-center gap-2">
            <%= design_button "New Transaction", new_transaction_path(account_id: @selected_account.id), variant: :primary, size: :sm, data: { turbo_frame: "_top" } %>
            <%= design_button "Edit Account", edit_account_path(@selected_account), variant: :ghost, size: :sm, data: { turbo_frame: "_top" } %>
          </div>
        </div>

        <!-- Reconcile Row -->
        <% # old_txn_count variable removed - now calculated dynamically by JS %>
        <div class="px-6 py-3 bg-neutral-50 border-t border-neutral-200" data-controller="reconcile-confirm">
          
          <!-- Normal Form State -->
          <div data-reconcile-confirm-target="form" class="flex items-center justify-between flex-wrap gap-3">
            <%= form_with url: reconcile_account_path(@selected_account), method: :patch,
                id: "reconcile-form",
                class: "flex items-center gap-4 flex-wrap" do |f| %>

              <div class="flex items-center gap-2">
                <span class="text-sm text-neutral-600">Balance:</span>
                <div class="flex items-center">
                  <span class="text-money font-semibold text-neutral-500 mr-1">$</span>
                  <%= f.number_field :current_balance,
                      value: sprintf('%.2f', @selected_account.current_balance),
                      step: 0.01,
                      class: "form-input py-1.5 w-32 text-money text-right" %>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <span class="text-sm text-neutral-600">as of</span>
                <span id="reconcile_date_display" class="text-sm font-semibold text-neutral-800"></span>
                <input type="hidden" name="balance_date" id="reconcile_balance_date">
                <script>
                  // Set date to browser's local date (today only, no future dates)
                  (function() {
                    var today = new Date();
                    var yyyy = today.getFullYear();
                    var mm = String(today.getMonth() + 1).padStart(2, '0');
                    var dd = String(today.getDate()).padStart(2, '0');
                    document.getElementById('reconcile_balance_date').value = yyyy + '-' + mm + '-' + dd;
                    document.getElementById('reconcile_date_display').textContent = today.toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    });
                  })();
                </script>
              </div>

              <button type="button" 
                  data-action="click->reconcile-confirm#showConfirmation"
                  class="btn-sm bg-success-600 hover:bg-success-700 text-white rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                Reconcile âœ“
              </button>
            <% end %>
          </div>

          <!-- Confirmation State -->
          <div data-reconcile-confirm-target="confirmation" class="hidden">
            <div class="flex flex-col gap-3">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span class="text-sm text-neutral-700">
                  Set balance to <strong data-reconcile-confirm-target="balance">$0.00</strong> as of <strong data-reconcile-confirm-target="date">today</strong>
                  <span data-reconcile-confirm-target="removeText"></span>
                </span>
              </div>
              
              <!-- Same-day transactions checkbox (shown only if there are any) -->
              <div data-reconcile-confirm-target="todayOption" class="hidden ml-7">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="checkbox" 
                      id="include_today_transactions"
                      data-reconcile-confirm-target="includeToday"
                      data-action="change->reconcile-confirm#updateTodayCount"
                      class="w-4 h-4 rounded border-neutral-300 text-warning-600 focus:ring-warning-500">
                  <span class="text-sm text-neutral-600">
                    Also clear <strong data-reconcile-confirm-target="todayCount">0</strong> transaction<span data-reconcile-confirm-target="todayPlural">s</span> from today
                  </span>
                </label>
              </div>
              
              <div class="flex items-center justify-end gap-2">
                <button type="button" 
                    data-action="click->reconcile-confirm#cancel"
                    class="btn-sm bg-neutral-200 hover:bg-neutral-300 text-neutral-700 rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                  Cancel
                </button>
                <button type="button" 
                    data-action="click->reconcile-confirm#confirm"
                    class="btn-sm bg-warning-500 hover:bg-warning-600 text-white rounded-lg px-4 py-1.5 font-medium cursor-pointer transition-colors">
                  Confirm Reconcile
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Scrollable Table Area -->
      <div class="flex-1 overflow-auto">
        <table class="table w-full">
          <thead class="sticky top-0 z-10 bg-white shadow-sm">
            <tr>
              <th class="w-20 bg-white">Status</th>
              <th class="bg-white">Date</th>
              <th class="bg-white">Description</th>
              <th class="text-right bg-white">Amount</th>
              <th class="text-right bg-white">Balance</th>
              <th class="text-right w-32 bg-white">Action</th>
            </tr>
          </thead>
          <tbody>
            <% prev_date = nil %>
            <% today_marker_shown = false %>
            <% @transactions_with_balances.each do |item| %>
              <% txn = item[:transaction] %>
              <% balance = item[:running_balance] %>
              <% is_past = txn.date < Date.current %>
              <% needs_attention = txn.estimated? && txn.date <= @attention_threshold %>
              <%
                balance_status = if balance < 0
                  :danger
                elsif balance < @selected_account.warning_threshold
                  :warning
                else
                  :normal
                end
              %>

              <%# Insert "Today" marker when crossing from past to future %>
              <% if !today_marker_shown && prev_date && prev_date < Date.current && txn.date >= Date.current %>
                <% today_marker_shown = true %>
                <tr class="bg-primary-50/50">
                  <td colspan="6" class="text-center text-sm font-medium text-primary-600 py-2">
                    <span class="inline-flex items-center gap-2">
                      <span class="w-8 h-px bg-primary-300"></span>
                      Today
                      <span class="w-8 h-px bg-primary-300"></span>
                    </span>
                  </td>
                </tr>
              <% end %>

              <%# Also show marker if first transaction is today or future but there are no past transactions %>
              <% if !today_marker_shown && !prev_date && txn.date >= Date.current && @selected_account.balance_date < Date.current %>
                <% today_marker_shown = true %>
                <tr class="bg-primary-50/50">
                  <td colspan="6" class="text-center text-sm font-medium text-primary-600 py-2">
                    <span class="inline-flex items-center gap-2">
                      <span class="w-8 h-px bg-primary-300"></span>
                      Today
                      <span class="w-8 h-px bg-primary-300"></span>
                    </span>
                  </td>
                </tr>
              <% end %>

              <tr class="<%= needs_attention ? 'border-l-4 border-l-warning-400' : '' %> <%= is_past ? 'opacity-60' : '' %>" data-transaction-date="<%= txn.date.to_s %>">
                <td>
                  <% if txn.estimated? %>
                    <%= badge "EST", variant: :warning %>
                  <% else %>
                    <%= badge "ACT", variant: :success %>
                  <% end %>
                </td>
                <td class="font-medium">
                  <%= txn.date.strftime("%b %d, %Y") %>
                </td>
                <td>
                  <div class="font-semibold text-neutral-900"><%= txn.description %></div>
                  <% if txn.recurring_rule %>
                    <div class="text-xs text-neutral-500 mt-0.5"><%= txn.recurring_rule.frequency.titleize %></div>
                  <% end %>
                </td>
                <td class="text-right text-money <%= txn.amount >= 0 ? 'text-success-600' : 'text-danger-600' %>">
                  <%= txn.formatted_amount %>
                </td>
                <td class="text-right text-money <%= balance_status == :danger ? 'text-danger-600 bg-danger-50' : (balance_status == :warning ? 'text-warning-700 bg-warning-50' : 'text-neutral-900') %>">
                  $<%= money_amount(balance) %>
                </td>
                <td class="text-right">
                  <% if txn.estimated? %>
                    <%= design_button "Mark Actual", confirm_actual_transaction_path(txn), variant: :ghost, size: :sm, data: { turbo_frame: "_top" } %>
                  <% end %>
                </td>
              </tr>
              <% prev_date = txn.date %>
            <% end %>
          </tbody>
        </table>

        <% if @transactions_with_balances.empty? %>
          <div class="px-6 py-16 text-center">
            <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p class="mt-4 text-neutral-500">No transactions for this account</p>
          </div>
        <% end %>
      </div>

      <%# Time period chips - Fixed Footer %>
      <div class="flex-shrink-0 px-6 py-4 border-t border-neutral-200 bg-white rounded-b-xl">
        <div class="flex items-center justify-center gap-2">
          <%# Primary chip options %>
          <% [1, 3, 6].each do |months| %>
            <% active = @months_ahead == months %>
            <%= link_to root_path(account_id: @selected_account.id, months: months),
                class: "px-3 py-1.5 text-sm font-medium rounded-full transition-colors #{active ? 'bg-primary-600 text-white' : 'bg-neutral-100 text-neutral-600 hover:bg-neutral-200'}" do %>
              <%= months %> mo
            <% end %>
          <% end %>

          <%# "More" dropdown for extended ranges %>
          <div class="relative" data-controller="dropdown">
            <% more_active = @months_ahead > 6 %>
            <button type="button"
                    data-dropdown-target="button"
                    data-action="click->dropdown#toggle keydown->dropdown#keydown"
                    aria-expanded="false"
                    class="px-3 py-1.5 text-sm font-medium rounded-full transition-colors inline-flex items-center gap-1 <%= more_active ? 'bg-primary-600 text-white' : 'bg-neutral-100 text-neutral-600 hover:bg-neutral-200' %>">
              <% if more_active %>
                <%= @months_ahead >= 12 ? "#{@months_ahead / 12} yr" : "#{@months_ahead} mo" %>
              <% else %>
                More
              <% end %>
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div data-dropdown-target="menu"
                 class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-32 bg-white rounded-lg shadow-lg border border-neutral-200 py-1 opacity-0 scale-95 pointer-events-none transition-all duration-150 z-20">
              <%= link_to root_path(account_id: @selected_account.id, months: 9),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 9 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                9 months
              <% end %>
              <%= link_to root_path(account_id: @selected_account.id, months: 12),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 12 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                1 year
              <% end %>
              <%= link_to root_path(account_id: @selected_account.id, months: 24),
                  class: "block px-4 py-2 text-sm hover:bg-neutral-50 #{@months_ahead == 24 ? 'text-primary-600 font-medium' : 'text-neutral-700'}" do %>
                2 years
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <div class="card p-16 text-center">
      <svg class="mx-auto h-16 w-16 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
      </svg>
      <p class="mt-4 text-lg text-neutral-600">No accounts yet</p>
      <p class="mt-2 text-sm text-neutral-500">Create your first account to start tracking your finances</p>
      <%= design_button "Create Account", new_account_path, variant: :primary, class: "mt-6" %>
    </div>
  <% end %>
</div>
