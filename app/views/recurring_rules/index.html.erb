<div class="space-y-6">
  <%# Page Header %>
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
    <div>
      <h1 class="text-2xl font-display font-bold text-neutral-900">Recurring Rules</h1>
      <p class="text-sm text-neutral-500 mt-1">Manage your automated recurring transactions</p>
    </div>
    <%= link_to new_recurring_rule_path, class: "btn-primary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      New Rule
    <% end %>
  </div>

  <%# Rules Table %>
  <div class="card overflow-hidden">
    <%# Mobile Rule Cards %>
    <div class="sm:hidden divide-y divide-neutral-200">
      <% @recurring_rules.each do |rule| %>
        <% type_variant = case rule.rule_type
           when 'income' then :success
           when 'expense' then :danger
           when 'transfer' then :primary
           end %>
        <% amount = rule.income? ? rule.amount : -rule.amount %>
        <div class="p-4 <%= rule.active? ? '' : 'opacity-50' %>">
          <%# Row 1: Description + Type badge %>
          <div class="flex items-start justify-between gap-2">
            <div class="font-semibold text-neutral-900"><%= rule.description %></div>
            <%= badge rule.rule_type.titleize, variant: type_variant %>
          </div>

          <%# Row 2: Account + Frequency %>
          <div class="mt-2 text-sm text-neutral-600">
            <div class="flex items-center gap-2">
              <span><%= rule.account.name %></span>
              <% if rule.transfer? && rule.destination_account %>
                <svg class="w-3 h-3 text-neutral-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
                <span><%= rule.destination_account.name %></span>
              <% end %>
            </div>
            <div class="text-xs text-neutral-500 mt-1">
              <%= rule.frequency.titleize %>
              <% if rule.day_of_month %>
                • Day <%= rule.day_of_month %>
              <% elsif rule.day_of_week %>
                • <%= Date::DAYNAMES[rule.day_of_week] %>
              <% end %>
            </div>
          </div>

          <%# Row 3: Amount, Status, Actions %>
          <div class="mt-3 flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="text-money font-semibold <%= amount >= 0 ? 'text-success-600' : 'text-danger-600' %>">
                <%= format_money(amount, color: false) %>
              </span>
              <% if rule.active? %>
                <%= badge "Active", variant: :success %>
              <% else %>
                <%= badge "Off", variant: :neutral %>
              <% end %>
            </div>
            <div class="flex items-center gap-1">
              <%= icon_button icon: :view, path: recurring_rule_path(rule), title: "View" %>
              <%= icon_button icon: :edit, path: edit_recurring_rule_path(rule), title: "Edit", variant: :primary %>
              <%= icon_button icon: :delete, path: recurring_rule_path(rule), title: "Delete", variant: :danger, method: :delete, data: { turbo_confirm: "Delete this rule?" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Desktop Table %>
    <div class="hidden sm:block table-container border-0">
      <table class="data-table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Type</th>
            <th>Account</th>
            <th>Frequency</th>
            <th class="text-right">Amount</th>
            <th class="text-center">Status</th>
            <th class="text-right w-32">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @recurring_rules.each do |rule| %>
            <tr class="<%= rule.active? ? '' : 'opacity-50' %>">
              <%# Description %>
              <td>
                <div class="font-medium text-neutral-900"><%= rule.description %></div>
                <% if rule.is_estimated? %>
                  <%= badge "Estimated", variant: :warning %>
                <% else %>
                  <%= badge "Actual", variant: :success %>
                <% end %>
              </td>

              <%# Type Badge %>
              <td>
                <% variant = case rule.rule_type
                   when 'income' then :success
                   when 'expense' then :danger
                   when 'transfer' then :primary
                   end %>
                <%= badge rule.rule_type.titleize, variant: variant %>
              </td>

              <%# Account %>
              <td class="text-neutral-600">
                <div><%= rule.account.name %></div>
                <% if rule.transfer? && rule.destination_account %>
                  <div class="text-xs text-neutral-400 flex items-center gap-1 mt-0.5">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                    <%= rule.destination_account.name %>
                  </div>
                <% end %>
              </td>

              <%# Frequency %>
              <td class="text-neutral-600">
                <div><%= rule.frequency.titleize %></div>
                <div class="text-xs text-neutral-400">
                  <% if rule.day_of_month %>
                    Day <%= rule.day_of_month %>
                  <% elsif rule.day_of_week %>
                    <%= Date::DAYNAMES[rule.day_of_week] %>
                  <% end %>
                </div>
              </td>

              <%# Amount %>
              <td class="text-right">
                <% amount = rule.income? ? rule.amount : -rule.amount %>
                <%= format_money(amount) %>
              </td>

              <%# Status %>
              <td class="text-center">
                <% if rule.active? %>
                  <%= badge "Active", variant: :success %>
                <% else %>
                  <%= badge "Inactive", variant: :neutral %>
                <% end %>
              </td>

              <%# Actions %>
              <td class="text-right">
                <div class="flex items-center justify-end gap-1">
                  <%= icon_button icon: :view, path: recurring_rule_path(rule), title: "View details" %>
                  <%= icon_button icon: :edit, path: edit_recurring_rule_path(rule), title: "Edit rule", variant: :primary %>
                  <%= icon_button icon: :delete, path: recurring_rule_path(rule), title: "Delete rule", variant: :danger, method: :delete, data: { turbo_confirm: "Delete this rule and all its generated transactions?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @recurring_rules.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-neutral-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-neutral-900 mb-1">No recurring rules</h3>
        <p class="text-sm text-neutral-500 mb-4">Get started by creating your first recurring rule.</p>
        <%= link_to new_recurring_rule_path, class: "btn-primary btn-sm" do %>
          Create Rule
        <% end %>
      </div>
    <% end %>
  </div>
</div>
