<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-display font-bold text-neutral-900"><%= @recurring_rule.description %></h1>
      <p class="text-sm text-neutral-500"><%= @recurring_rule.frequency.titleize %> <%= @recurring_rule.rule_type %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= design_button "Edit", edit_recurring_rule_path(@recurring_rule), variant: :secondary, size: :sm %>
      <%= link_to "Back", recurring_rules_path, class: "text-neutral-500 hover:text-neutral-700 text-sm" %>
    </div>
  </div>

  <!-- Rule Details -->
  <div class="card p-6">
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dt class="text-sm font-medium text-neutral-500">Account</dt>
        <dd class="mt-1 text-sm text-neutral-900"><%= @recurring_rule.account.name %></dd>
      </div>
      <% if @recurring_rule.transfer? && @recurring_rule.destination_account %>
        <div>
          <dt class="text-sm font-medium text-neutral-500">Destination Account</dt>
          <dd class="mt-1 text-sm text-neutral-900"><%= @recurring_rule.destination_account.name %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm font-medium text-neutral-500">Amount</dt>
        <dd class="mt-1">
          <%= format_money(@recurring_rule.income? ? @recurring_rule.amount : -@recurring_rule.amount) %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-neutral-500">Frequency</dt>
        <dd class="mt-1 text-sm text-neutral-900">
          <%= @recurring_rule.frequency.titleize %>
          <% if @recurring_rule.day_of_month %>
            on day <%= @recurring_rule.day_of_month %>
          <% elsif @recurring_rule.day_of_week %>
            on <%= Date::DAYNAMES[@recurring_rule.day_of_week] %>s
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-neutral-500">Transaction Type</dt>
        <dd class="mt-1">
          <%= status_label estimated: @recurring_rule.is_estimated? %>
          <span class="text-sm text-neutral-500 ml-1">transactions</span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-neutral-500">Status</dt>
        <dd class="mt-1">
          <% if @recurring_rule.active? %>
            <%= badge "Active", variant: :success %>
          <% else %>
            <%= badge "Inactive", variant: :neutral %>
          <% end %>
        </dd>
      </div>
    </dl>
  </div>

  <!-- Upcoming Transactions -->
  <div class="card">
    <div class="px-6 py-4 border-b border-neutral-200">
      <h2 class="text-lg font-display font-semibold text-neutral-900">Next Occurrences</h2>
    </div>
    <ul class="divide-y divide-neutral-200">
      <% @upcoming.each do |txn| %>
        <li class="px-6 py-4 flex justify-between items-center">
          <div>
            <span class="text-sm text-neutral-900"><%= txn.date.strftime("%B %d, %Y") %></span>
            <span class="text-xs text-neutral-500 ml-2">(<%= distance_of_time_in_words_to_now(txn.date) %>)</span>
          </div>
          <%= format_money(txn.amount) %>
        </li>
      <% end %>
    </ul>
    <% if @upcoming.empty? %>
      <div class="px-6 py-8 text-center text-neutral-500">
        No upcoming transactions
      </div>
    <% end %>
  </div>
</div>
